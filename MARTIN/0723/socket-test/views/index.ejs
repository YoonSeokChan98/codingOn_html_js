<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/socket.io/socket.io.js"></script>
</head>

<body>
    <h1>Hello Wolrd!</h1>
    <form id="form_hello">
        <button id="hello">hello</button>
    </form>
    <form id="form_study">
        <button id="study">study</button>
    </form>
    <form id="form_bye">
        <button id="bye">bye</button>
    </form>
    <ul></ul>

    <script>
        const socket = io();
        const form1 = document.querySelector('#form_hello');
        const form2 = document.querySelector('#form_study');
        const form3 = document.querySelector('#form_bye');
        const ul = document.querySelector('ul');

        

        form1.addEventListener('submit', (e) => {
            e.preventDefault();
            // const hello = form1.querySelector('#hello');
            socket.emit('hello_message', 'client: hello', (hello) => {
                console.log(hello);
                const li = document.createElement('li');
                li.textContent = hello;
                ul.appendChild(li);
            })
        });
        form2.addEventListener('submit', (e)=>{
            e.preventDefault();
            const study = form2.querySelector('#study');
            socket.emit('study_message', 'study', (study)=>{
                // console.log(study);
            });
            socket.on('study_message2',(study2)=>{
                    console.log(study2);
                    const li = document.createElement('li');
                    li.textContent = study2;
                    ul.appendChild(li);
                })
        });
        form3.addEventListener('submit', (e)=>{
            e.preventDefault()
        })





    </script>
</body>

</html>