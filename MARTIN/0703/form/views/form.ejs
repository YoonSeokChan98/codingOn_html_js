<body>
    <h3>폼 태그</h3>
    <form action="/test" method="get">
        <input type="text" placeholder="placeholder"><br>
        <input type="text" placeholder="readonly" readonly><br>
        <input type="text" placeholder="disabled" disabled><br>

        <input type="password" placeholder="password"><br>
        <input type="email" placeholder="email"><br>

        <input type="radio" name="gender" value="남자">남자
        <input type="radio" name="gender" value="여자">여자<br>

        <input type="checkbox" name="hobby" value="여행">여행
        <input type="checkbox" name="hobby" value="게임">게임
        <input type="checkbox" name="hobby" value="등산">등산<br>

        <input type="tel: 010-1234-1234">tel<br>
        <input type="number">number<br>
        <input type="date">date<br>
        <input type="time">time<br>
        <input type="color">color<br>

        <br><hr><br>

        <select name="" id="">
            <% for (let i=1970; i<=2024; i++){ %>
                <option value="<%= i %>"><%= i %></option>
            <% } %>
        </select><br>

        <label for="test">클릭</label>
        <input type="text" placeholder="test" id="test">

        <fieldset>
            <legend>제목</legend>
            <input type="text">
        </fieldset>

        <br><button type="submit">버튼</button>
    </form>
</body>
</html>