<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form onsubmit="submitFunc(event)" name="button-form">
        <label for="username">이름</label>
        <input type="text" id="username" required /><br />
        <label for="email">이메일</label>
        <input type="email" id="email" required /><br />
        <button type="button" onclick="submitFunc(event)">제출</button>
    </form>

    <script>
        function submitFunc(e) {
            console.log(e);
            e.preventDefault(); // 기본 제출을 막아주고 원하는 데이터를 받을 수 있음
            const form = document.forms['button-form'];
            console.log(form); // 전체 폼 정보
            console.log(form.username);
            console.log(form.email);
            console.log(form.username.value);
            console.log(form.email.value);
            console.log(document.getElementById('username'));
        }
    </script>
</body>
</html>